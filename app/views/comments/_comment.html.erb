<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %></strong>
          <br>
          <%= comment.comment %>
        </p>
      </div>
    </div>
    <%= link_to  "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you sure ? "}, class: "button is-danger" %>
  </article>
</div>